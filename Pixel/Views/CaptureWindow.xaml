<Window x:Class="Pixel.Views.CaptureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CaptureWindow" Height="300" Width="300"
        ShowInTaskbar="False" WindowStyle="None" WindowState="Maximized" AllowsTransparency="True" Background="Black"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Topmost="True" Cursor="Cross" Opacity="0.4">
    <Window.InputBindings>
        <KeyBinding x:Name="EscapeKey" Key="Escape" />
    </Window.InputBindings>
    <Canvas>
        <Rectangle x:Name="Target" Opacity="0.4" Fill="White" />
    </Canvas>
</Window>